{
  "name": "pixi_node_game",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "vite",
    "dev:server": "bun run src/server/main.ts",
    "build:client": "vite build",
    "build:server": "bun build src/server/main.ts --outfile=dist/assets/server.js --target=bun",
    "build": "tsc && vite build",
    "start": "bun run dist/assets/server.js"
  },
  "dependencies": {
    "@pixi/devtools": "^2.0.1",
    "@types/uuid": "^10.0.0",
    "bun": "^1.2.1",
    "pixi.js": "^8.6.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bun": "latest",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.7.2",
    "vite": "^6.0.2"
  },
  "build": {
    "outdir": "dist"
  }
}